{
	"extends": "./tsconfig.json",
	"include": [
		".react-router/types/**/*",
		"app/**/*",
		"app/**/.server/**/*",
		"app/**/.client/**/*",
		"workers/**/*",
		"db/**/*",
		"tests/**/*",
		"__mocks__/**/*",
		"drizzle.config.ts",
		"worker-configuration.d.ts",
		"virtual-modules.d.ts"
	],
	"exclude": [
		".storybook/**/*",
		"app/**/*.stories.tsx",
		"stories/**/*",
		"storybook-static/**/*",
		"node_modules/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client", "vitest/globals"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"~/*": ["./app/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
