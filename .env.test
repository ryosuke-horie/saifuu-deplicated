# Remix Testing Environment Variables

# Base URL for testing
PLAYWRIGHT_TEST_BASE_URL=http://localhost:5173

# Production URL for production tests
PLAYWRIGHT_PROD_BASE_URL=https://timetable-hideskick.net

# Remix development settings
NODE_ENV=test
REMIX_DEV_NO_RESTART=1
PLAYWRIGHT_REMIX_MODE=test

# Mock settings for testing
MOCK_AWS_SES=true
MOCK_EMAIL_SENDING=true

# AWS configuration for testing (if not mocked)
AWS_REGION=ap-northeast-1
SES_FROM_EMAIL=no-reply@timetable-hideskick.net
SES_TO_EMAIL=test@example.com

# Japanese locale settings
LANG=ja_JP.UTF-8
LC_ALL=ja_JP.UTF-8
TZ=Asia/Tokyo

# Test timeout settings
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_EXPECT_TIMEOUT=10000

# Browser settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# CI/CD settings
CI=false
PLAYWRIGHT_WORKERS=1

# Debug settings
DEBUG=false
PLAYWRIGHT_DEBUG=false

# Screenshot and video settings
PLAYWRIGHT_SCREENSHOT_ON_FAILURE=true
PLAYWRIGHT_VIDEO_ON_FAILURE=true
PLAYWRIGHT_TRACE_ON_RETRY=true