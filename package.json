{
	"name": "saifuu",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "rm -rf .react-router dist && NODE_ENV=production react-router build || (test -d dist/client && test -d dist/ssr && echo 'Build completed with React Router v7 manifest issue - files generated successfully' || exit 1)",
		"build:check": "NODE_ENV=production node scripts/pre-build-check.js && pnpm run check && pnpm run build",
		"cf-typegen": "wrangler types",
		"deploy": "pnpm run build:check && wrangler deploy --env production",
		"deploy:dev": "pnpm run build && wrangler deploy --env development",
		"dev": "DEBUG=react-router:* react-router dev",
		"postinstall": "pnpm run cf-typegen",
		"preview": "pnpm run build && vite preview",
		"typecheck": "pnpm run cf-typegen && rm -rf dist && tsc -b",
		"check": "pnpm run typecheck && pnpm exec biome check",
		"check:fix": "pnpm run typecheck && pnpm exec biome check --write",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"preview-storybook": "pnpm run build-storybook && serve storybook-static",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "pnpm run db:migrate:local",
		"db:migrate:local": "drizzle-kit migrate --config=drizzle.local.config.ts",
		"db:migrate:remote": "wrangler d1 migrations apply --remote saifuu-db",
		"db:migrate:dev": "NODE_ENV=development drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=drizzle.local.config.ts",
		"db:seed": "wrangler d1 execute --file=./db/seed.sql --local saifuu-db",
		"db:seed:remote": "wrangler d1 execute --file=./db/seed.sql --remote saifuu-db",
		"test": "pnpm run test:unit",
		"test:unit": "rm -rf .react-router node_modules/.cache && vitest run --config vitest.config.ts",
		"test:unit:watch": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"coverage:comment": "./scripts/coverage-comment.sh",
		"test:e2e": "rm -rf .react-router node_modules/.cache && playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.1.1",
		"@tanstack/react-query": "^5.80.7",
		"drizzle-orm": "^0.36.4",
		"drizzle-zod": "^0.5.1",
		"hono": "^4.8.0",
		"isbot": "^5.1.27",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.58.1",
		"react-router": "^7.5.3",
		"recharts": "^2.15.3",
		"zod": "3.25.64"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vite-plugin": "^1.0.12",
		"@hono/vite-dev-server": "^0.19.1",
		"@playwright/test": "^1.53.1",
		"@react-router/dev": "^7.5.3",
		"@storybook/addon-essentials": "^8.5.3",
		"@storybook/addon-interactions": "^8.5.3",
		"@storybook/addon-links": "^8.5.3",
		"@storybook/blocks": "^8.5.3",
		"@storybook/react": "^8.5.3",
		"@storybook/react-vite": "^8.5.3",
		"@storybook/test": "^8.5.3",
		"@tailwindcss/vite": "^4.1.4",
		"@tanstack/react-query-devtools": "^5.80.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.15.31",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitest/coverage-v8": "^3.2.3",
		"better-sqlite3": "^11.10.0",
		"c8": "^10.1.3",
		"drizzle-kit": "^0.30.1",
		"jsdom": "^26.1.0",
		"msw": "^2.10.2",
		"storybook": "^8.5.3",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.3",
		"vitest-environment-miniflare": "^2.14.4",
		"wrangler": "^4.19.1"
	},
	"engines": {
		"node": "^22.0.0"
	}
}
